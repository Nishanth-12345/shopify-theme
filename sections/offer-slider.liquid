<section>
  <div class="offer-wrapper">
    <div class="offer-slider"> 
    <div class="offer-slide-container 
      {% if section.settings.mode == true %} rte {% endif %}"

    >
      <div class="offer-title">
        <h3>{{ section.settings['offer-title'] }}</h3>
      </div>
      <div class="offer-title">
        <h3>{{ section.settings['offer-title'] }}</h3>
      </div>
      <div class="offer-title">
        <h3>{{ section.settings['offer-title'] }}</h3>
      </div>
    </div>
  </div>
</div>
</section>

<style>
  .offer-title h3{
     color: {{ section.settings.text-color }}
  }

  .offer-slide-container{
    background: {{ section.settings.bg-color }}
  }
</style>

{% schema %}
{
  "name": "offer",
  "settings": [
    {
      "type": "text",
      "id": "offer-title",
      "label": "offer title",
      "default": "Limited offer sale 50%"
    },
    {
       "type": "checkbox",
       "id":"mode",
       "label": "select right mode",
       "default":false
    },
    {
      "type": "color",
      "id":"bg-color",
      "label": "select background"
    },
    {
      "type": "color",
      "id":"text-color",
      "label": "select text color"
    },
  ],
  "presets": [
    {
      "name": "offer"
    }
  ]
}
{% endschema %}
