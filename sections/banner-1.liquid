<section>
  <div class="banner-wrapper">
    <div class="slide-text" id="text-1">shopping</div>
    <div class="slide-text" id="text-2">shopping-1</div>
    <div class="slide-text" id="text-3">shopping-2</div>
  </div>
</section>

<style>
  .banner-wrapper{
     background: {{ section.settings.background }};
     color:{{ section.settings.text-color }}
  }

  .slide-text{
     position:absolute;
     top:155px;
     left:-150%;
     transform: translate(0, -50%);
     color: black;
     padding: 20px;
     font-size: 20px;
     transition: left 0.5s ease-in-out;
  }
</style>

