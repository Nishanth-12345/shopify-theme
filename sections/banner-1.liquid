      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#d3568f"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "banner"
    }
  ]
}
{% endschema %}
