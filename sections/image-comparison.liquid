<section>
  <div class="image-comparison-slider-container">
    <div class="image-wrapper">
      {% if section.settings.image1 != blank %}
        <div class="image">
          {{
            section.settings.image1
            | image_url: width: 300
            | image_tag: width: section.settings.image1.width, height: section.settings.image1.width
            | divided_by: section.settings.image1.aspect_ratio
          }}
        </div>
    {% else%}
        <div class="image">
          <img src="{{ 'chair-2.jpg' | asset_url }}" width="300" height="300" alt="Armchair">
        </div>
      {% endif %}
      {% if section.settings.image2 != blank %}
        <div class="image">
            {{
                section.settings.image2
                | image_url: width: 300
                | image_tag: width: section.settings.image1.width, height: section.settings.image1.width
                | divided_by: section.settings.image1.aspect_ratio
              }}
        </div>
    {% else%}
        <div class="image">
          <img src="{{ 'chair-4.jpg' | asset_url }}" width="300" height="300" alt="Armchair">
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

{% schema %}
{
  "name": "image comparison",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "image 1"
    }
  ]
}
{% endschema %}
