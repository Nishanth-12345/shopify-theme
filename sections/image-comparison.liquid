<section>
   <div class="image-container">
    <h2>Comparison between these images</h2>
    <p>Comparison between these images</p>
   </div>
  <image-comparison>
    <div class="image-comparison-slider-container">
      <div class="image-wrapper">
        {% if section.settings.image1 != blank %}
          <div class="image">
            {{
              section.settings.image1
              | image_url: width: 300
              | image_tag: width: section.settings.image1.width, height: section.settings.image1.width
              | divided_by: section.settings.image1.aspect_ratio
            }}
            <div class="description">
              <p>chair make your home decorat</p>
            </div>
          </div>
        {% else %}
          <div class="image">
            <img src="{{ 'chair-2.jpg' | asset_url }}" width="300" height="300" alt="Armchair">
            <div class="description">
              <p>chair make your home decorat</p>
            </div>
          </div>
        {% endif %}
        {% if section.settings.image2 != blank %}
          <div class="image sec">
            {{
              section.settings.image2
              | image_url: width: 300
              | image_tag: width: section.settings.image1.width, height: section.settings.image1.width
              | divided_by: section.settings.image1.aspect_ratio
            }}
                
        <div class="description right">
          <p>chair make your home decorat</p>
        </div>
          </div>
        {% else %}
          <div class="image sec">
            <img src="{{ 'chair-4.jpg' | asset_url }}" width="300" height="300" alt="Armchair">
            <div class="description right">
              <p>chair make your home decorat</p>
            </div>
          </div>
        {% endif %}
        
        <div class="dragger">{{ 'double-arrow.svg' | inline_asset_content }}</div>
        <div class="before">before</div>
        <div class="after">after</div>
  
      </div>
    </div>
  </image-comparison>
</section>

{% schema %}
{
  "name": "image comparison",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "image 1"
    }
  ]
}
{% endschema %}
