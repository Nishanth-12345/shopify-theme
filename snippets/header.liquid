<header class="header-nav">
  <div>
    <a href="/">
      <img
        width="80"
        height="50"
        loading="lazy"
        src="{{'icon.png'|asset_url}}"
      >
    </a>
  </div>
  <div>
    <ul class="middle-nav-bar">
      <!-- Main menu -->
      {% for link in linklists['main-menu'].links -%}
        <li>{{ link.title | link_to: link.url }}</li>
      {%- endfor %}
    </ul>
  </div>
  <div class="right-nav-items">
    <form action="/search">
      <input class="search-nav" placeholder="search" type="search">
    </form>

    <a href="/">
      <img
        width="40"
        height="50"
        loading="lazy"
        src="{{'icon.png'|asset_url}}"
      >
    </a>
  </div>
</header>

<style>
  .header-nav {
    display: flex;
    justify-content: space-between;
    margin: 0;
    padding: 0px 30px;
    background-color: #fff;
  }

  .middle-nav-bar {
    display: flex;
    font-size: 16px;
    justify-content: space-between;
    font-weight: bold;
  }

  .middle-nav-bar li {
    padding: 10px;
    list-style: none;
  }

  .middle-nav-bar li:hover {
    text-decoration: underline;
  }

  .middle-nav-bar li a {
    color: inherit;
    text-decoration: none;
  }

  .right-nav-items {
    display: flex;
    align-items: center;
  }

  .search-nav {
    padding: 10px;
    margin-top: 10px;
    border-radius: 10px;
    border: none;
    background-color: #d3d2d2;
  }
</style>
